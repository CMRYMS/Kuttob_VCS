<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#e9ddd3"
    android:padding="30dp"
    tools:context=".kuttob_admin_add">

    <TextView
        android:id="@+id/admin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin "
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="100dp"/>

    <TextView
        android:id="@+id/addbookrecord_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:text="Add Book Record" />

    <EditText
        android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Enter Book Name" />

    <EditText
        android:id="@+id/author1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Enter Author Name" />

    <EditText
        android:id="@+id/category1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Enter Category" />

    <EditText
        android:id="@+id/pages1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Enter Page Number" />

    <EditText
        android:id="@+id/price1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Enter Price " />

    <Button
        android:id="@+id/add2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#6A5C51"
        android:layout_marginTop="50dp"
        android:textSize="19dp"
        android:text="Add" />

    <Button
        android:id="@+id/clearcont2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#e9ddd3"
        android:textColor="#6A5C51"
        android:textStyle="bold"
        android:textSize="17dp"
        android:text="Clear Contents" />

</LinearLayout>