<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#e9ddd3"
    android:padding="30dp"
    tools:context=".kuttob_admin_delete">

    <TextView
        android:id="@+id/admin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin "
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="100dp"/>

    <TextView
        android:id="@+id/deleterecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:text="Delete Book Record" />

    <TextView
        android:id="@+id/book_deleteID_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Book ID" />

    <EditText
        android:id="@+id/book_delete_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginBottom="20dp"
        android:hint="Enter Book ID To Delete Information" />

    <Button
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#6A5C51"
        android:text="Delete"
        android:textSize="19dp" />

</LinearLayout>