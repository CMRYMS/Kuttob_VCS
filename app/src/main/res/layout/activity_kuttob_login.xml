<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="15dp"
    android:background="#e9ddd3"
    tools:context=".kuttob_login">


    <EditText
        android:id="@+id/logemail"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:hint="Enter Your E-Mail"
        android:inputType="text"
        android:textSize="19dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="277dp" />

    <EditText
        android:id="@+id/logpassword"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:textSize="19dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="376dp" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#6A5C51"
        android:text="Login"/>

    <Button
        android:id="@+id/alreadyreg"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#e9ddd3"
        android:textColor="#574638"
        android:text="Not Registered? Please Click Here"
        android:textSize="17dp"
        android:textStyle="bold"/>
</LinearLayout>